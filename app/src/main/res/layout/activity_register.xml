<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UI.RegisterActivity">

    <LinearLayout
        android:id="@+id/LinerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="40dp"
        android:paddingBottom="24dp"
        android:gravity="center_horizontal"
        android:background="@color/white">

        <!-- Nút quay lại -->
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:contentDescription="Back"
            android:layout_marginBottom="12dp"
            app:srcCompat="@drawable/back" />

        <!-- Logo / Hình minh họa -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/bg1"
            android:layout_gravity="center" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Tạo tài khoản"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="Đăng ký để bắt đầu"
            android:textColor="@color/darkGrey"
            android:textSize="16sp" />

        <!-- Form đăng ký -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/organe_bg"
                    android:drawableStart="@drawable/ic_mail"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="Email"
                    android:paddingVertical="12dp"
                    android:textColorHint="@color/darkGrey" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tên đăng nhập -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/userTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/organe_bg"
                    android:drawableStart="@drawable/user"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="Tên đăng nhập"
                    android:paddingVertical="12dp"
                    android:textColorHint="@color/darkGrey" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Mật khẩu -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:endIconMode="password_toggle"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/organe_bg"
                    android:drawableStart="@drawable/key"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:paddingVertical="12dp"
                    android:textColorHint="@color/darkGrey" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Xác nhận mật khẩu -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/forgotPassTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                app:endIconMode="password_toggle"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/forgotPassEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/organe_bg"
                    android:drawableStart="@drawable/key"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="Xác nhận mật khẩu"
                    android:inputType="textPassword"
                    android:paddingVertical="12dp"
                    android:textColorHint="@color/darkGrey" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nút đăng ký -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registerBtn"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/organe_bg"
                android:paddingHorizontal="36dp"
                android:paddingVertical="10dp"
                android:text="Đăng ký ngay"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
